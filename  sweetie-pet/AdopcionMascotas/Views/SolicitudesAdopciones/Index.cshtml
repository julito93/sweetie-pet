@model AdopcionMascotas.Models.SolicitudFotos
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre de la mascota:
        </th>
        <th>
            Fecha de solicitud:
        </th>
        <th>
            Estado de la solicitud:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Solicitudes)
    {
        string seleccionada = "";

        if (item.ID == ViewBag.SolicitudID)
        {
            seleccionada = "success";
        }
        <tr class="@seleccionada">
            <td>
                @Html.DisplayFor(modelItem => item.Mascota.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Adop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

@if (Model.Fotos != null)
{
    <h3>Fotos de la mascota seleccionada</h3>
    <body>
        <div class="container">
            <div class="row">

                @foreach (var item in Model.Fotos)
                {
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                        <p>
                            <img class="img-responsive" src=@item.Url />
                        </p>
                    </div>
                }
            </div>
        </div>
    </body>
}
